<!doctype html>
<html>

<head>
    <title>Socket.IO chat</title>
    <% include ./partials/header %>
        


</head>

<body>
    <script>
        const roomName = '<%= roomName %>';
        const target = '<%= target %>';
        const currentUser = '<%=currentUser%>';
        const userId = '<%=userId%>';
    </script>
    <div class="container-fluid">
        <div class="row">
            <div id="chatrooms" class="col-sm-2">
                <% include ./partials/logout %>
                    <h3>Create chat room</h3>
                    <form id="createChatRoom" action="">
                        <input id="newRoomName" autocomplete="off"><button type="submit">Create</button>
                    </form>

                    <p>Logged in as
                        <%=currentUser%>
                            <a href="/profile/<%=currentUser%>">View Profile</a>
                    </p>

                    <h3>Chat rooms</h3>
                    <ul>
                        <% for (chatroom of chatrooms) { %>
                            <li class ="roomList">
                                <a href="/chatroom/<%= chatroom.roomname %>">
                                    <%= chatroom.roomname %>
                                </a>
                            </li>
                            <% } %>
                    </ul>
                    <div id="direct-messages">
                        <h3>Direct messages</h3>
                        <% include ./partials/online %>
                    </div>
            </div>
            <div id="around-chat" class="col-sm-7">
                    <h1><%= roomName %></h1>
                <div id="chat-container">
                    
                    <ul id="messages">
                      
                    </ul>
                   
                </div>
                <form id="sendMessage" action="" class="">
                    <p>Type here</p>
                    <input id="m" autocomplete="off"><button class="btn-primary">Send</button>
                </form>
            </div>
        
            <div id="All-users" class="col-sm-2">
                <h3>All users</h3>
                <% include ./partials/usersProfile %>
            </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="/js/chatroom.js"></script>
</body>

</html>